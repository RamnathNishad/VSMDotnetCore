@model MVCHelloWorld.Models.Customer

@{
    ViewData["Title"] = "CustomerPageST";
}

<h1>CustomerPageST</h1>

<h4>Customer</h4>
<hr />

@using (Html.BeginForm("AddCustomer", "Customer"))
{
    <table class="table">
        <tr>
            <td>Id:</td>
            <td>@Html.TextBoxFor(modelItem=>modelItem.CustId)</td>
        </tr>
        <tr>
            <td>Name:</td>
            <td>@Html.TextBoxFor(modelItem => modelItem.Name)</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.PasswordFor(modelItem => modelItem.Password)</td>
        </tr>
        <tr>
            <td>Select gender:</td>
            <td>
                @Html.RadioButtonFor(modelItem=>modelItem.Gender,"M") Male
                @Html.RadioButtonFor(modelItem=>modelItem.Gender, "F") Female
            </td>
        </tr>
        <tr>
            <td>Select city:</td>
            <td>
                @Html.DropDownListFor(modelItem=>modelItem.SelectedCity,Model.Cities)
             
            </td>
        </tr>
        <tr>
            <td>
                Select hobbies:
            </td>
            <td>                
                @foreach (var hobby in Model.Hobbies)
                {
                    <input type="checkbox" name="Hobbies" id="Hobbies" value="@hobby" />

                    @hobby
                }
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Submit" class="btn btn-success" />
            </td>
            <td></td>
        </tr>
    </table>

    <table class="table">
        @if (Model != null)
        {
            <tr>
                <th> CustId</th>
                <th> Name</th>
                <th> Gender</th>
                <th> SelectedCity</th>
                <th>
                    Hobbies
                </th>
            </tr>
            <tr>
                <td> @Model.CustId</td>
                <td> @Model.Name</td>
                <td> @Model.Gender</td>
                <td> @Model.SelectedCity</td>
                <td>
                    @if(Model.SelectedHobbies!=null)
                    {
                        foreach (var hobby in Model.SelectedHobbies)
                        {
                            @hobby

                            <span>,</span>
                        }
                    }
                </td>
            </tr>
        }
    </table>
}




